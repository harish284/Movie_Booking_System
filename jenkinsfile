pipeline {
    agent any

    environment {
        FRONTEND_IMAGE = 'harish2810/movie-frontend:latest'
        BACKEND_IMAGE = 'harish2810/movie-backend:latest'
    }

    stages {
        stage('Check-out') {
            steps {
                git branch: 'main', url: 'https://github.com/harish284/smartcom.git'
            }
        }

        stage('Frontend Build and Test') {
            steps {
                sh '''
                    echo "Building and testing frontend inside Docker..."
                    docker build -f frontend.dockerfile -t $FRONTEND_IMAGE .
                    docker run --rm $FRONTEND_IMAGE echo "Frontend build completed!"
                '''
            }
        }

        stage('Backend Build and Test') {
            steps {
                sh '''
                    echo "Building and testing backend inside Docker..."
                    docker build -f backend.dockerfile -t $BACKEND_IMAGE .
                    docker run --rm $BACKEND_IMAGE echo "Backend build completed!"
                '''
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                            docker push $FRONTEND_IMAGE
                            docker push $BACKEND_IMAGE
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
